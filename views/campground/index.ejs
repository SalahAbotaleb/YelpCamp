<% layout('layouts/boilerplate') -%>
<h1>All campgrounds</h1>
<h2><a href="/campground/new">add campground</a></h2>
<% for(camp of camps){ %>
<div class="card mb-3" ">
  <div class=" row">
  <div class=" col-md-4">
    <img src="<%= camp.image %>" class="img-fluid rounded-start" alt="...">
  </div>
  <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title"><%= camp.title %></h5>
      <p class="card-text"><%= camp.description %></p>
      <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
      <a href="/campground/<%= camp._id %>" class="btn btn-primary">view <%= camp.title %></a>
    </div>
  </div>
</div>
</div>

<!-- <h3><a href="/campground/<%= camp._id %>"><%= camp.title %></a></h3> -->
<% } %>